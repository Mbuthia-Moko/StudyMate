# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

GET     /FAQ                controllers.HomeController.FAQ()

GET     /about                controllers.HomeController.about()

GET     /login                controllers.HomeController.login()

GET     /signup                controllers.HomeController.signup()

GET     /forgotPassword       controllers.HomeController.forgotPassword()

GET     /resetPassword       controllers.HomeController.resetPassword()

GET    /home                controllers.HomeController.home()

GET /learn controllers.HomeController.learn()

GET /teach controllers.HomeController.teach()

GET /notifications controllers.HomeController.notifications()

GET /sessions controllers.HomeController.sessions()

GET /settings controllers.HomeController.settings()

GET /pricing controllers.HomeController.pricing()

#temporarily logout will return to home page
GET /logout controllers.HomeController.index()

GET /sessionDetails controllers.HomeController.sessionDetails()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

